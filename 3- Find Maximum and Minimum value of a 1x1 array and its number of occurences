#include <iostream>
using namespace std;

int main()
{
    int i,n;
    int k=1;
    float arr[100];
    cout<<"Enter your n";
    cin>>n;
    for(i=0;i<n;i++){
        cout<<"Enter your number"<<i+1;
        cin>>arr[i];
    }
    for(i=1;i<n;i++){
    if(arr[0]<arr[i])
    arr[0]=arr[i];
    
    }
    for(int j = 0;j<=i;j++){
            if(arr[i]==arr[j])
                k +=1;
        }

          cout<<"Greatest is"<<arr[0]<<"Number of occurences "<<k;


    return 0;
    }
